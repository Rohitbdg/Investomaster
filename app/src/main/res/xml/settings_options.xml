<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <ListPreference
        android:title="Refresh Rate"
        android:dialogTitle="Refresh Rate"
        android:key="Time"
        android:entries="@array/refresh_rate"
        android:entryValues="@array/refresh_values"
        android:defaultValue="@string/def_time"/>

    <ListPreference
        android:title="Notifications"
        android:dialogTitle="Notifications"
        android:key="notif"
        android:entries="@array/notif"
        android:entryValues="@array/notif_val"
        android:defaultValue="@string/on_val"/>

    <EditTextPreference
        android:defaultValue="2016-12-01"
        android:inputType="text"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:title="Start Date for Graph"
        android:key="start_date" />


</PreferenceScreen>